<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_top_track"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="?android:attr/listPreferredItemHeight">
    <ImageView
        android:id="@+id/image_individual_top_track"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@android:drawable/btn_star_big_on"/>
    <TextView
        android:id="@+id/textview_top_track_artist_name"
        android:layout_toRightOf="@id/image_individual_top_track"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Artist name"/>
    <TextView
        android:id="@+id/textview_top_track_name"
        android:layout_toRightOf="@id/image_individual_top_track"
        android:layout_below="@id/textview_top_track_artist_name"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Track Name here"/>
</RelativeLayout>
